doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Agent Login
    link(rel='stylesheet', href='/stylesheets/agent-styles.css')
    link(rel='stylesheet', href='/stylesheets/agent-login-styles.css')
  body
    header
      .header-item.secondry-logo
        img(src='/images/secondry-logo.png')
      .header-item.center-header-item
        .home-button
          a(href='/')
            button Home
        //- - const keys = Object.keys(flash)  
