        //-   p= values
        
        //- - var temp = messages?.error
        //- p=temp
        if messages.error 
          p=messages.error 
      .header-item.primary-logo
        img(src='/images/logo.png')
    main
      #login-registration-div
        .login-div
          form(method='POST' action='')
            h1 Agent Login
            .form-group
              //- input#username.item(type='text', name='username', placeholder='Username', required='')
              input#username.item(type='email', name='email', placeholder='Email', required='')
            .form-group
              input#password.item(type='password',name='password', placeholder='Password', required='')
            a.forgot-password(href='') Forgot Password
            .form-group.btn-group
              button.btn.login-btn(type='submit') Login
              a(href='/agent-request-login')
                button.btn.request-login(type='button') Request Sign In