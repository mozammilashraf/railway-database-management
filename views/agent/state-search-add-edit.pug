extends agentLayout

block stylesheets 
  link(rel='stylesheet', href='/stylesheets/agent-styles.css')
  link(rel='stylesheet', href='/stylesheets/state-search-add-edit.css')

block scripts
  script(src='/javascripts/state-search-add-edit.js', defer)


block mainContent
  .main-content
    section#add-new-section
      h1 Add New State
      form#state-form.input-container(name='state-form', action='/agent/state-input')
        // method="POST"
        // action="http://localhost:3000/agent/state-input"
        .form-input-row-container
          .input-container-row
            //
              <div class="form-input-row-head">
              <div class="form-head-child">State</div>
              </div>
            .form-input-row
              // <h id="sr-no">1.</h>
              label(for='state-input-value') State Name:
              input#state-input-value(type='text', maxlength='30', name='state-input-value', required='')
              img(src='/images/dustbin.png', onclick='deleteInputFormRow(this)')
        .add-new-field(onclick='addNewInputFormRow()')
          img(src='/images/add-button.png')
        button(type='reset') Reset
        button#submit-state-btn(type='submit')
          // onclick="submitState();"
          | Submit
        //
          <input
          type="submit"
          value="Submit"
          name="submit"
          onClick="return confirmSubmit()"
          />
    hr
    section#search-section
      #state-search-form.input-container(name='state-search-form')
        // action="http://localhost:3000/agent/state/"
        label(for='search-text') Search State : 
        input#search-text(type='text', max='30', required='', name='search-text')
        button(type='reset', name='search-text') Reset
        button#search-btn(type='button', onclick='searchState()')
          | Search
        //
          <input
          type="submit"
          value="Submit"
          name="submit"
          onClick="return confirmSubmit()"
          />
      section#update-row(hidden='')
        label(for='update-state-name-input') New State Name
        input#update-state-name-input(name='update-state-name-input')
        button#update-row-btn Update
      button#showAll-Btn(type='button', onclick='showAllState()')
        | Show all state
      .state-data-container
        table#state-table
          thead
            tr
              td State
              td Edit
              td Delete
          tbody
