    section.Form
      // <div class="container-fluid" id="form1">
      #form1.row.justify-content-center
        #formimg.col-md-4
          img.img-fluid(src='https://img.freepik.com/free-vector/isometric-horizontal-underground-illustration_1284-24531.jpg?t=st=1646577305~exp=1646577905~hmac=f7617f3adba059cdf7360ea208fe05407de1ef4e8247c75578004ff0b802780a&w=740', alt='Remote image')
        #formtxt.col-md-8
          h2 SEARCH TRAIN
          // action=""
          form#search-train-form.frm(method='POST', name='search-train-form', action='/train-search')
            datalist#station-list
            .form-row
              .col-md-8
                | FROM:
                input#from-station.form-control(type='text', placeholder='FROM', name='from-station', required='', list='station-list', oninput='handleStationList(this)', autocomplete='off', value='')
            .form-row
              .col-md-8
                | TO:
                input#to-station.form-control(type='text', placeholder='TO', name='to-station', required='', list='station-list', autocomplete='off', oninput='handleStationList(this)', value='')
            .form-row
              .col-md-8
                | DATE:
                input#search-date.form-control(type='date', placeholder='DATE', required='', name='search-date', value='2022-03-29')
            .form-row
              .col-md-8
                | CLASSES:
                select#class-type.search-train-item(name='class-type')
                  option(value='all-classes') All Classes
                    each Class in allClasses
                        option(value=Class.class_type_code) #{Class.class_type_name}
                  //
                    <option value="all-classes">All Classes</option>
                    <option value="first-ac">First AC</option>
                    <option value="second-ac">Second AC</option>
                    <option value="third-ac">Third AC</option>
                    <option value="sleeper">Sleeper</option>
                    <option value="chair-car">Chair Car</option>
            .form-row
              .col-md-8
                button.btn1(type='submit') Search
